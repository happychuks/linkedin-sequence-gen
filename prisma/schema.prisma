generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prospect {
  id        Int        @id @default(autoincrement())
  url       String     @unique
  sequences Sequence[]
}

model Prompt {
  id        Int        @id @default(autoincrement())
  version   Int
  content   String
  createdAt DateTime   @default(now())
  sequences Sequence[]
}

model TovConfig {
  id          Int      @id @default(autoincrement())
  name        String? // Optional name for presets like "Professional", "Casual"
  formality   Float // 0.0 to 1.0
  warmth      Float // 0.0 to 1.0
  directness  Float // 0.0 to 1.0
  description String? // Optional description of the TOV style
  isPreset    Boolean  @default(false) // Whether this is a system preset
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sequences Sequence[]

  // Ensure unique combinations for presets
  @@unique([formality, warmth, directness, name])
  @@index([isPreset])
  @@index([name])
}

model Sequence {
  id               Int      @id @default(autoincrement())
  prospectId       Int
  promptId         Int
  tovConfigId      Int // Reference to TOV configuration
  messages         Json     @db.JsonB // JSONB for message querying
  thinkingProcess  Json // Keep as JSON (write-once, read-rarely)
  prospectAnalysis String?
  metadata         Json     @db.JsonB // JSONB for analytics queries
  createdAt        DateTime @default(now())

  // Sequence versioning for iterations
  version          Int  @default(1)
  parentSequenceId Int? // Reference to original sequence if this is a refinement

  // Company context used for generation
  companyContext String @default("")
  sequenceLength Int    @default(3)

  prospect       Prospect   @relation(fields: [prospectId], references: [id])
  prompt         Prompt     @relation(fields: [promptId], references: [id])
  tovConfig      TovConfig  @relation(fields: [tovConfigId], references: [id])
  parentSequence Sequence?  @relation("SequenceRefinements", fields: [parentSequenceId], references: [id])
  refinements    Sequence[] @relation("SequenceRefinements")

  // Indexes for performance optimization
  @@index([prospectId])
  @@index([promptId])
  @@index([tovConfigId])
  @@index([createdAt])
  @@index([prospectId, createdAt(sort: Desc)])
  @@index([promptId, createdAt(sort: Desc)])
  @@index([prospectId, version])
  @@index([parentSequenceId])
  // JSONB indexes for efficient querying
  @@index([metadata], type: Gin)
  @@index([messages], type: Gin)
}
